---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import ExperienceCard from '@/components/ExperienceCard.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllExperiences } from '@/lib/data-utils'

const experiences = await getAllExperiences()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Experience" />
  <Breadcrumbs items={[{ label: 'Experience', icon: 'lucide:briefcase-business' }]} />

  <section>
    <div class="min-w-full">
      <h2 class="mb-4 text-2xl font-medium">Internship Experience</h2>
      <div class="flex flex-col gap-4">
        {experiences
        .filter(experience => experience.data.type === "internship")
        .map((experience) => <ExperienceCard experience={experience} />)}
      </div>
      <h2 class="mt-8 mb-4 text-2xl font-medium">Academic Experience</h2>
      <div class="flex flex-col gap-4">
        {experiences
        .filter(experience => experience.data.type === "academic")
        .map((experience) => <ExperienceCard experience={experience} />)}
      </div>
      <h2 class="mt-8 mb-4 text-2xl font-medium">Leadership Experience</h2>
      <div class="flex flex-col gap-4">
        {experiences
        .filter(experience => experience.data.type === "leadership")
        .map((experience) => <ExperienceCard experience={experience} />)}
      </div>
    </div>
  </section>
</Layout>
