---
import Link from '@/components/Link.astro'
import type { CollectionEntry } from 'astro:content'
import ExperienceCardContent from './ExperienceCardContent.astro'

interface Props {
  experience: CollectionEntry<'experience'>
}

const { experience } = Astro.props
---

{
  experience.data.link ? (
    <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
      <Link href={experience.data.link} class="flex flex-col gap-4 sm:flex-row" external>
        <ExperienceCardContent experience={experience} />
      </Link>
    </div>
  ) : (
    <div class="rounded-xl border p-4">
      <div class="flex flex-col gap-4 sm:flex-row">
        <ExperienceCardContent experience={experience} />
      </div>
    </div>
  )
}

