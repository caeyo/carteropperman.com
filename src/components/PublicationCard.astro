---
import Link from '@/components/Link.astro'
import type { CollectionEntry } from 'astro:content'
import PublicationCardContent from './PublicationCardContent.astro'

interface Props {
  publication: CollectionEntry<'publications'>
}

const { publication } = Astro.props
---

{
  publication.data.link ? (
    <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
      <Link href={publication.data.link} class="flex flex-col gap-4 sm:flex-row" external>
        <PublicationCardContent publication={publication} />
      </Link>
    </div>
  ) : (
    <div class="rounded-xl border p-4">
      <div class="flex flex-col gap-4 sm:flex-row">
        <PublicationCardContent publication={publication} />
      </div>
    </div>
  )
}

