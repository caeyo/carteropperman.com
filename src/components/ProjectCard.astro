---
import Link from '@/components/Link.astro'
import type { CollectionEntry } from 'astro:content'
import ProjectCardContent from './ProjectCardContent.astro'

interface Props {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
---

{
  project.data.link ? (
    <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
      <Link href={project.data.link} class="flex flex-col gap-4 sm:flex-row" external>
        <ProjectCardContent project={project} />
      </Link>
    </div>
  ) : (
    <div class="rounded-xl border p-4">
      <div class="flex flex-col gap-4 sm:flex-row">
        <ProjectCardContent project={project} />
      </div>
    </div>
  )
}

